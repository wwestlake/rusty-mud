pipeline {
    agent any

    environment {
        QA_CREDENTIALS = credentials('qa_server')
        PROD_CREDENTIALS = credentials('prod')
    }

    stages {

        stage("build") {
            steps {
                echo "building application..."
            }
        }

        stage("test") {
            steps {        
                echo "testing application..."
            }
        }

        stage("stage to QA") {
            when {
                expression {
                    BRANCH_NAME == 'dev'
                }
            }
            steps {
                echo "staging application to QA server"
                withCredentials([
                    usernamePassword(credentials: 'qa_server', usernameVariable: USER, passwordVariable: PWD)    
                ]) {
                    sh "plink.exe -ssh ${USER}@10.0.0.12 -pw ${PWD} echo Test"
                }
            }
        }

        stage("Deploy to Prod") {
            when {
                expression {
                    BRANCH_NAME == 'main'
                }
            }
            steps {
                echo "staging application to QA server"
            }
        }

    }


}
