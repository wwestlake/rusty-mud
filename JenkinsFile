pipeline {
    agent any

    environment {
        QA_CREDENTIALS = credentials('qa_server')
        PROD_CREDENTIALS = credentials('prod')
    }

    stages {

        stage("build") {
            steps {
                echo "building application..."
                echo "QA ${QA_CREDENTIALS}"
                echo "QA ${PROD_CREDENTIALS}"
            }
        }

        stage("test") {
            steps {        
                echo "testing application..."
            }
        }

        stage("stage to QA") {
            when {
                expression {
                    BRANCH_NAME == 'dev'
                }
            }
            steps {
                echo "staging application to QA server"
            }
        }

        stage("Deploy to Prod") {
            when {
                expression {
                    BRANCH_NAME == 'main'
                }
            }
            steps {
                echo "staging application to QA server"
            }
        }

    }


}
